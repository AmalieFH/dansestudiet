<section>
  <div class="undervisere">
    <h1>Undervisere</h1>
    <div class="underviseregalleri">
      <img class="underviser1" src="/assets/images/underviser1.png" alt="underviser1" />
      <img class="underviser2" src="/assets/images/underviser2.png" alt="underviser2" />
      <img class="underviser3" src="/assets/images/underviser3.png" alt="underviser3" />
    </div>
    <div class="knap">
      <Button text="Se alle undervisere" />
    </div>
  </div>
</section>

<style>
  .knap {
    text-align: center;
  }
  .stilarter {
    text-transform: uppercase;
    overflow-x: hidden;
  }
  .textani {
    display: flex;
    flex-wrap: nowrap;
    white-space: nowrap;
    min-width: 100%;
  }
  .news-message {
    display: flex;
    flex-shrink: 0;
    height: var(--spacing-space-small);
    align-items: center;
    animation: slide-left 40s linear infinite;
  }
  p {
    font-size: 2.5em;
    font-weight: 100;
    padding-left: 0.5em;
    font-family: "Montserrat";
    color: #e5233b;
  }

  @keyframes slide-left {
    from {
      -webkit-transform: translateX(0);
      transform: translateX(0);
    }
    to {
      -webkit-transform: translateX(-100%);
      transform: translateX(-100%);
    }
  }

  .undervisere {
    padding-top: var(--spacing-space-large);
    display: grid;
    justify-self: center;
    align-self: center;
  }
  .undervisere h1 {
    justify-self: center;
    align-self: center;
    padding-bottom: var(--spacing-space-small);
  }
  .underviseregalleri {
    display: flex;
    justify-content: space-around;
    gap: var(--spacing-space-xsmall);
    padding-bottom: var(--spacing-space-small);
  }

  .underviseregalleri img {
    max-width: 30%;
  }

  @media (max-width: 700px) {
    .underviseregalleri {
      display: grid;
      grid-template-columns: 1fr;
    }

    .underviseregalleri img {
      max-width: 60%;
    }
    .underviser1,
    .underviser2,
    .underviser3 {
      display: block;
      margin-left: auto;
      margin-right: auto;
    }
  }
</style>
