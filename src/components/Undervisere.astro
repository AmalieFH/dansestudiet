<style>
  section {
    text-transform: uppercase;
    overflow-x: hidden;
  }
  .textani {
    display: flex;
    flex-wrap: nowrap;
    white-space: nowrap;
    min-width: 100%;
  }
  .news-message {
    display: flex;
    flex-shrink: 0;
    height: 50px;
    align-items: center;
    animation: slide-left 40s linear infinite;
  }
  p {
    font-size: 2.5em;
    font-weight: 100;
    padding-left: 0.5em;
    font-family: "Montserrat";
    color: #e5233b;
  }

  @keyframes slide-left {
    from {
      -webkit-transform: translateX(0);
      transform: translateX(0);
    }
    to {
      -webkit-transform: translateX(-100%);
      transform: translateX(-100%);
    }
  }

  .underviser1,
  .underviser2,
  .underviser3 {
    width: 50%;
  }
  .underviseregalleri {
    display: flex;
    justify-content: space-between;
    gap: 50px;
  }

  @media (max-width: 700px) {
    .ticket {
      display: grid;
      grid-template-columns: 1fr;
      width: 60%;
    }
  }
</style>
